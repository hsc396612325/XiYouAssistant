<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="97dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/login_icon_badge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="西邮助手"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱 国、求 是、奋 进"
        android:layout_marginTop="7dp"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>


    <RelativeLayout
        android:id="@+id/bt_login_id"
        android:layout_marginTop="107dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_id_bt_bg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            android:layout_width="21dp"
            android:layout_height="24dp"
            android:src="@drawable/login_icon_user"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:text="学号登录"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bt_login_wechat"
        android:layout_marginTop="50px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_wechat_bt_bg"
        android:layout_width="600px"
        android:layout_height="100px"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_marginStart="47px"
            android:layout_marginLeft="47px"
            android:layout_centerVertical="true"
            android:layout_width="42px"
            android:layout_height="48px"
            android:src="@drawable/login_icon_wechat"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="30px"
            android:text="微信登录"/>

    </RelativeLayout>

</LinearLayout>