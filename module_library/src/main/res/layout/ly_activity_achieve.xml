<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.LyAchieveActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/tool_bar_title"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="成就中心"/>

    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="620px"
        android:layout_height="750px"
        app:cardElevation="20px"
        app:cardCornerRadius="50px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="125px">

                <ImageView
                    android:layout_width="48px"
                    android:layout_height="41px"
                    android:src="@drawable/ly_icon_achieve_1"/>

                <com.xiyoumoblie.lib.common.ui.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33px"
                    android:textSize="36px"
                    android:text="借书目标" />

            </LinearLayout>


            <Button
                android:layout_width="180px"
                android:layout_height="60px"
                android:text="30本"
                android:textSize="30px"
                android:layout_marginTop="36px"
                android:background="@drawable/ly_bt_bg_yellow"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="66px">

                <ImageView
                    android:layout_width="48px"
                    android:layout_height="41px"
                    android:src="@drawable/ly_icon_achieve_2"/>

                <com.xiyoumoblie.lib.common.ui.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33px"
                    android:textSize="36px"
                    android:text="累计借书" />

            </LinearLayout>


            <Button
                android:layout_width="200px"
                android:layout_height="60px"
                android:layout_marginTop="53px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ly_bt_bg_blue"
                android:text="14本"/>

            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="66px"
                android:textSize="28px"
                android:text="距离下一个称号还差 4 本书" />
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56px">
                
                <com.xiyoumobile.module.library.ui.custom.LyProcessView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:frame_color="#dfdfdf"
                    app:content_color="#78d6b9"
                    app:process="80"
                    app:bar_width="20px"/>

                <ImageView
                    android:layout_width="43px"
                    android:layout_height="43px"
                    android:layout_marginTop="2px"
                    android:src="@drawable/ly_icon_achieve_3"/>

            </RelativeLayout>
            
            
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.xiyoumoblie.lib.common.ui.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:layout_marginTop="26px"
        android:layout_centerHorizontal="true"
        android:text="注：仅统计一年内的数据"
        android:textSize="18px" />

</RelativeLayout>