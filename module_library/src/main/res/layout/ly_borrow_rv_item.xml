<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="29dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:paddingBottom="37dp"
    android:paddingLeft="36dp"
    android:paddingRight="36dp"
    android:background="@drawable/ly_rv_item_bg">

    <com.xiyoumoblie.lib.common.ui.MyTextView
        android:id="@+id/l_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="10dp"
        android:layout_marginTop="28dp"
        android:text="《Android开发艺术探索》"
        android:textSize="18dp"/>


    <ImageView
        android:id="@+id/im_status"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignBottom="@id/l_book_name"
        android:layout_marginBottom="-123px"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/tv_status"
        android:src="@drawable/ly_icon_borrow_1"
        android:layout_toLeftOf="@+id/tv_status"
        android:layout_marginEnd="8dp" />


    <com.xiyoumoblie.lib.common.ui.MyTextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/l_book_name"
        android:layout_marginBottom="-123px"
        android:textSize="12dp"
        android:text="借阅状态：本馆续借"/>


    <com.xiyoumoblie.lib.common.ui.MyTextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_status"
        android:layout_marginTop="26dp"
        android:layout_alignStart="@id/tv_status"
        android:text="还书日期：2018-9-10"
        android:textSize="12dp"
        android:layout_alignLeft="@id/tv_status" />


    <ImageView
        android:id="@+id/im_data"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_toStartOf="@id/tv_data"
        android:layout_marginRight="9dp"
        android:layout_alignBottom="@id/im_status"
        android:layout_marginBottom="-70px"
        android:src="@drawable/ly_icon_borrow_2"
        android:layout_marginEnd="9dp"
        android:layout_toLeftOf="@id/tv_data" />

    <View
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:layout_alignTop="@id/im_data"
        android:layout_marginTop="17dp"/>

</RelativeLayout>