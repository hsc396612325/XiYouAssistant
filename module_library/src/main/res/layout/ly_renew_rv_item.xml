<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25px"
    android:layout_marginRight="25px"
    android:layout_marginTop="45px"
    android:layout_marginBottom="8px"
    app:cardElevation="20px"
    app:cardCornerRadius="30px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:id="@+id/l_book_name"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="《Android开发艺术探索》"
            android:layout_centerHorizontal="true"
            android:textSize="36px"
            android:layout_marginLeft="66px"
            android:layout_marginRight="66px"
            android:layout_marginTop="49px"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/l_renew_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:layout_marginTop="131px"
            android:layout_marginLeft="145px"
            android:text="借阅状态：本馆借出"/>

        <TextView
            android:id="@+id/l_renew_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200px"
            android:textSize="24px"
            android:layout_marginLeft="145px"
            android:text="还书日期：2018-9-10"/>

        <TextView
            android:id="@+id/l_renew_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="265px"
            android:textSize="24px"
            android:layout_marginLeft="145px"
            android:text="剩余天数：3天"/>


        <ImageView
            android:layout_width="28px"
            android:layout_height="34px"
            android:layout_marginTop="128px"
            android:layout_marginLeft="89px"
            android:src="@drawable/ly_icon_borrow_1"/>

        <ImageView
            android:layout_width="38px"
            android:layout_height="35px"
            android:layout_marginTop="192px"
            android:layout_marginLeft="82px"
            android:src="@drawable/ly_icon_borrow_2"/>

        <ImageView
            android:layout_width="27px"
            android:layout_height="32px"
            android:layout_marginTop="260px"
            android:layout_marginLeft="90px"
            android:src="@drawable/ly_icon_renew_3"/>

        <Button
            android:id="@+id/bt_renew"
            android:layout_width="120px"
            android:layout_height="40px"
            android:layout_alignTop="@id/l_renew_left"
            android:layout_marginTop="63px"
            android:layout_marginBottom="34px"
            android:text="续 借"
            android:textSize="18px"
            android:textColor="#0f0e0b"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ly_bt_bg_yellow"/>

        <Button
            android:id="@+id/bt_disable"
            android:visibility="gone"
            android:layout_width="150px"
            android:layout_height="40px"
            android:layout_alignTop="@id/l_renew_left"
            android:layout_marginTop="63px"
            android:layout_marginBottom="34px"
            android:text="续借已达上限"
            android:textSize="18px"
            android:textColor="#0f0e0b"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ly_bt_bg_gray"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>