<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fafafa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="21dp"
            android:text="目标：30本"
            android:layout_marginStart="21dp" />

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="174dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="11dp"
            android:text="7月29日 星期日"
            android:layout_marginEnd="21dp"
            android:layout_alignParentRight="true" />

        <com.xiyoumobile.module.library.ui.custom.LyWaveView
            android:id="@+id/wave_progress"
            android:layout_width="148dp"
            android:layout_height="148dp"
            app:front_wave_color="#b1d1ff"
            app:circle_color="#80bee8"
            app:back_wave_color="#8ec0f9"
            app:wave_height="15dp"
            app:wave_width="180dp"
            android:layout_centerInParent="true"/>

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已累计借书："
            android:textSize="12dp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"/>

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:id="@+id/l_tv_brought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20本"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_centerInParent="true"/>

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="青铜读者"
            android:textSize="15dp"
            android:textColor="#164881"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="135dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_auto_basewidth="height"
            android:scaleType="fitXY"
            android:src="@drawable/ly_icon_main_1"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" />

        <ViewFlipper
            android:id="@+id/l_view_flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:layout_marginLeft="10dp"
            android:autoStart="true"
            android:flipInterval="2000"
            android:inAnimation="@anim/ly_flipper_anim_in"
            android:outAnimation="@anim/ly_flipper_anim_out"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="27dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--android:overScrollMode="never"-->
        <!--android:fadingEdge="none" >-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/search_img"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/ly_icon_main_2" />

            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:id="@+id/search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="书刊检索" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_borrow"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/l_center_img"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/ly_icon_main_3"/>

            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:id="@+id/l_center_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="我的借阅"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_renew"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/renew_img"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/ly_icon_main_4" />

            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:id="@+id/renew_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="续借申请" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorLine"/>
    
    <LinearLayout
        android:id="@+id/l_ll_history"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">
        
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ly_icon_main_5"
            android:layout_marginStart="20dp" />
        
        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="借阅历史"
            android:textSize="15dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="23dp"
            android:src="@drawable/ly_icon_main_into"
            android:layout_marginEnd="23dp" />
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine"/>

    <LinearLayout
        android:id="@+id/l_ll_open_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ly_icon_main_6"
            android:layout_marginStart="20dp" />

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="开馆时间"
            android:textSize="15dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="23dp"
            android:src="@drawable/ly_icon_main_into"
            android:layout_marginEnd="23dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine"/>

    <LinearLayout
        android:id="@+id/l_ll_distribution"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ly_icon_main_7"
            android:layout_marginStart="20dp" />

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="馆藏分布"
            android:textSize="15dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="23dp"
            android:src="@drawable/ly_icon_main_into"
            android:layout_marginEnd="23dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/colorLine"/>

    <com.xiyoumoblie.lib.common.ui.MyTextView
        android:id="@+id/l_tv_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000"
        android:gravity="center"
        android:background="@color/white"
        android:text="登录"
        android:textSize="18dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="20dp"
        android:background="@color/colorLine"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>