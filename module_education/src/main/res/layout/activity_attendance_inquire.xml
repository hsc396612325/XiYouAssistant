<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/attendance_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="标题"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:background="@drawable/ic_education_clock" />


        <android.support.v7.widget.CardView
            android:layout_width="250px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="57px"
            app:cardCornerRadius="17.5dp"
            app:cardElevation="10px">

            <Button
                android:id="@+id/bt_from_time"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/education_shape_button"
                android:textColor="@color/button_text_color" />

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35px"
            android:text="至"
            android:textSize="30px" />

        <android.support.v7.widget.CardView
            android:layout_width="250px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35px"
            app:cardCornerRadius="17.5dp"
            app:cardElevation="10px">

            <Button
                android:id="@+id/bt_to_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/education_shape_button"
                android:textColor="@color/button_text_color" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85px"
        android:layout_marginTop="35px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="42px"
            android:layout_height="44px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28px"
            android:background="@drawable/ic_education_list" />

        <android.support.v7.widget.CardView
            android:layout_width="600px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="54px"
            android:background="@drawable/education_shape_button"
            app:cardCornerRadius="17.5dp"
            app:cardElevation="10px"
            app:cardPreventCornerOverlap="true">

            <Button
                android:id="@+id/bt_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/education_shape_button"
                android:textColor="@color/button_text_color"
                android:textSize="60px" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart_pie"
        android:layout_width="422px"
        android:layout_height="422px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px"
        android:layout_marginTop="30px"
        android:layout_marginBottom="60px"
        android:elevation="15px"
        app:cardCornerRadius="30px">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_lesson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>


</LinearLayout>