<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_text"
    tools:context="com.xiyoumoblie.module.education.AppealActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/appeal_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="标题"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="600px"
        android:layout_height="800px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="17.5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_course"
                android:layout_width="400px"
                android:layout_height="60px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="77px"
                android:background="@drawable/education_shape_button"
                android:gravity="center"
                android:text="C语言程序设计"
                android:textColor="@color/button_text_color"
                android:textSize="28px" />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="400px"
                android:layout_height="60px"
                android:layout_below="@+id/tv_course"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55px"
                android:background="@drawable/education_shape_button"
                android:gravity="center"
                android:text="7-12 1-2节"
                android:textColor="@color/button_text_color"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date"
                android:layout_marginLeft="120px"
                android:layout_marginTop="64px"
                android:text="申诉原因:"
                android:textColor="@color/button_text_color"
                android:textSize="28px" />

            <FrameLayout
                android:layout_width="400px"
                android:layout_height="350px"
                android:layout_below="@+id/tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25px"
                android:background="@drawable/education_shape_edit">

                <EditText
                    android:id="@+id/et_appeal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="25px"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="最少输入7个字"
                    android:textSize="28px" />

            </FrameLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="400px"
        android:layout_height="90px"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80px"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/touch_raise"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="22.5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="确认申诉"
            android:textColor="@color/white"
            android:textSize="30px" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
