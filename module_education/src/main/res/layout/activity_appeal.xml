<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.xiyoumoblie.module.education.activity.AppealActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/appeal_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m88px"
        android:background="?attr/colorPrimary">

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="标题"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/m600px"
        android:layout_height="@dimen/m800px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/m158px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/m35px"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:id="@+id/tv_course"
                android:layout_width="@dimen/m400px"
                android:layout_height="@dimen/m60px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/m77px"
                android:background="@drawable/education_attendance_bt_bg"
                android:gravity="center"
                android:text="C语言程序设计"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/m28px" />


            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:id="@+id/tv_date"
                android:layout_width="@dimen/m400px"
                android:layout_height="@dimen/m60px"
                android:layout_below="@+id/tv_course"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/m55px"
                android:background="@drawable/education_attendance_bt_bg"
                android:gravity="center"
                android:text="7-12 1-2节"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/m28px" />

            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date"
                android:layout_marginLeft="@dimen/m120px"
                android:layout_marginTop="@dimen/m64px"
                android:text="申诉原因:"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/m28px" />

            <FrameLayout
                android:layout_width="@dimen/m400px"
                android:layout_height="@dimen/m350px"
                android:layout_below="@+id/tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/m25px"
                android:background="@drawable/education_appeal_et_bg">

                <EditText
                    android:id="@+id/et_appeal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/m25px"
                    android:layout_marginLeft="@dimen/m30px"
                    android:layout_marginRight="@dimen/m30px"
                    android:layout_marginTop="@dimen/m25px"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="最少输入7个字"
                    android:textSize="@dimen/m28px" />

            </FrameLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/m400px"
        android:layout_height="@dimen/m90px"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/m80px"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/touch_raise"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/m35px"
        app:cardElevation="2dp">


        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="确认申诉"
            android:textColor="@color/white"
            android:textSize="@dimen/m30px" />

    </android.support.v7.widget.CardView>
</RelativeLayout>
