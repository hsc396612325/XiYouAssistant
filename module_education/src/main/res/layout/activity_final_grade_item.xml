<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/m30px"
    android:layout_marginLeft="@dimen/m30px"
    android:layout_marginRight="@dimen/m30px"
    app:cardCornerRadius="@dimen/m10px"
    app:elevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m60px"
            android:background="#4cb7ff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="@dimen/m40px"
                android:layout_height="@dimen/m40px"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/m11px"
                android:background="@drawable/education_final_grade_item_tv"
                android:gravity="center"
                android:text="必"
                android:textColor="#4cb7ff"
                android:textSize="@dimen/m28px" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/m16px"
                android:text="C语言程序设计"
                android:textColor="@color/white"
                android:textSize="@dimen/m28px" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m60px"
            android:background="#f2f2f2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/m18px"
                android:text="学分: 4.0"
                android:textColor="#ff000000"
                android:textSize="@dimen/m28px" />

            <TextView
                android:id="@+id/tv_gpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/m60px"
                android:text="绩点: 5.0"
                android:textColor="#000000"
                android:textSize="@dimen/m28px" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/peacetime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m60px"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_peacetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/m18px"
                android:text="平时/试卷: 30/70"
                android:textColor="#ff000000"
                android:textSize="@dimen/m28px" />

            <TextView
                android:id="@+id/tv_total_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/m60px"
                android:text="总评: 100.0"
                android:textColor="#000000"
                android:textSize="@dimen/m28px" />

        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>