<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@drawable/education_timetable_rl_bg"
        android:layout_height="@dimen/m487px"
        android:layout_width="@dimen/m610px"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/m66px"
            android:background="#c2e0f4"
            android:layout_marginTop="@dimen/m197px"
            />
        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:id="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_height="@dimen/m45px"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:text="当前周为:第四周"
            android:textSize="@dimen/m28px" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/m320px"
            android:layout_marginTop="@dimen/m10px"
            android:layout_marginBottom="@dimen/m10px"
            android:layout_width="match_parent">

        </android.support.v7.widget.RecyclerView>


        <View
            android:background="#CCCCCC"
            android:id="@+id/view_line"
            android:layout_below="@+id/recycler_view"
            android:layout_height="1px"
            android:layout_width="match_parent" />

        <View
            android:background="#CCCCCC"
            android:layout_below="@+id/view_line"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/m88px"
            android:layout_width="1px" />

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:id="@+id/tv_confirm"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/m88px"
            android:layout_width="@dimen/m305px"
            android:text="确定"
            android:textColor="#6cb5e5"
            android:textSize="@dimen/m28px" />

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:id="@+id/tv_cancel"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_height="@dimen/m88px"
            android:layout_width="@dimen/m305px"
            android:text="取消"
            android:textColor="#6cb5e5"
            android:textSize="@dimen/m28px" />


    </RelativeLayout>
</LinearLayout>