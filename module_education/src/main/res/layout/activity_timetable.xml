<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.xiyoumoblie.module.education.activity.TimetableActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/timetable_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m88px"
        android:background="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:id="@+id/tool_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="第一周"
                android:textColor="#ffffff"
                android:textSize="@dimen/m28px" />

            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:id="@+id/tool_bar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/m14px"
                android:text="大一  第2学期"
                android:textColor="#ffffff"
                android:textSize="@dimen/m22px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="@dimen/m40px"
            android:layout_height="@dimen/m40px"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/m22px"
            android:src="@drawable/ic_education_timetable_add" />

        <ImageView
            android:id="@+id/iv_add2"
            android:layout_width="@dimen/m40px"
            android:layout_height="@dimen/m40px"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/m22px"
            android:src="@drawable/ic_education_timetable_add2"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

                <LinearLayout
                    android:layout_width="@dimen/m60px"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#863498db"
                    android:orientation="vertical">

                    <com.xiyoumoblie.lib.common.ui.MyTextView

                        android:layout_width="@dimen/m30px"
                        android:layout_height="@dimen/m90px"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.4"
                        android:text=" "
                        android:textColor="@color/white"
                        android:textSize="@dimen/m28px" />


                    <com.xiyoumoblie.lib.common.ui.MyTextView
                        style="@style/TimetableClassTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/m63px"
                        android:layout_marginTop="@dimen/m75px"
                        android:text="1" />

                    <com.xiyoumoblie.lib.common.ui.MyTextView
                        style="@style/TimetableClassTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2" />

                    <com.xiyoumoblie.lib.common.ui.MyTextView
                        style="@style/TimetableClassTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3" />

                    <com.xiyoumoblie.lib.common.ui.MyTextView
                        style="@style/TimetableClassTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4" />

                    <com.xiyoumoblie.lib.common.ui.MyTextView
                        style="@style/TimetableClassTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5" />

                    <com.xiyoumoblie.lib.common.ui.MyTextView
                        style="@style/TimetableClassTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6" />

                    <com.xiyoumoblie.lib.common.ui.MyTextView
                        style="@style/TimetableClassTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7" />

                    <com.xiyoumoblie.lib.common.ui.MyTextView
                        style="@style/TimetableClassTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8" />

                    <com.xiyoumoblie.lib.common.ui.MyTextView
                        style="@style/TimetableClassTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9" />

                    <com.xiyoumoblie.lib.common.ui.MyTextView
                        style="@style/TimetableClassTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/m90px" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m90px"
            android:layout_alignParentTop="true"
            android:background="#863498db"
            android:orientation="horizontal">

            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:id="@+id/tv_month"
                android:layout_width="@dimen/m30px"
                android:layout_height="@dimen/m90px"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/m13px"
                android:layout_marginRight="@dimen/m13px"
                android:gravity="center"
                android:lineSpacingMultiplier="1.4"
                android:text="七月"
                android:textColor="@color/white"
                android:textSize="@dimen/m28px" />

            <android.support.v7.widget.RecyclerView

                android:id="@+id/recycler_view_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <View
            android:id="@+id/alpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_alpha32"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>
