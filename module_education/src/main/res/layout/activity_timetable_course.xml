<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.xiyoumoblie.module.education.activity.TimetableCourseActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/timetable_course_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m88px"
        android:background="?attr/colorPrimary">

        <com.xiyoumoblie.lib.common.ui.MyTextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="标题"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/m400px"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/m25px"
        android:layout_marginLeft="@dimen/m25px"
        android:layout_marginTop="@dimen/m26px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.xiyoumoblie.lib.common.ui.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/m46px"
                android:text="大学英语Ⅱ"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/m48px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m40px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m32px"
                    android:layout_height="@dimen/m32px"
                    android:layout_marginLeft="@dimen/m209px"
                    android:src="@drawable/ic_education_timetable_course_classroom" />

                <com.xiyoumoblie.lib.common.ui.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m46px"
                    android:text="教室"
                    android:textColor="#808080"
                    android:textSize="@dimen/m28px" />

                <com.xiyoumoblie.lib.common.ui.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m31px"
                    android:text="FZ309"
                    android:textColor="#000000"
                    android:textSize="@dimen/m28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m26px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m32px"
                    android:layout_height="@dimen/m32px"
                    android:layout_marginLeft="@dimen/m209px"
                    android:src="@drawable/ic_education_timetable_course_week" />

                <com.xiyoumoblie.lib.common.ui.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m46px"
                    android:text="周数"
                    android:textColor="#808080"
                    android:textSize="@dimen/m28px" />

                <com.xiyoumoblie.lib.common.ui.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m31px"
                    android:text="1-16周"
                    android:textColor="#000000"
                    android:textSize="@dimen/m28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m26px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m32px"
                    android:layout_height="@dimen/m32px"
                    android:layout_marginLeft="@dimen/m209px"
                    android:src="@drawable/ic_education_timetable_course_date" />

                <com.xiyoumoblie.lib.common.ui.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m46px"
                    android:text="节数"
                    android:textColor="#808080"
                    android:textSize="@dimen/m28px" />

                <com.xiyoumoblie.lib.common.ui.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m31px"
                    android:text="周一 1-2节"
                    android:textColor="#000000"
                    android:textSize="@dimen/m28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m26px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m32px"
                    android:layout_height="@dimen/m32px"
                    android:layout_marginLeft="@dimen/m209px"
                    android:src="@drawable/ic_education_timetable_course_teacher" />

                <com.xiyoumoblie.lib.common.ui.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m46px"
                    android:text="老师"
                    android:textColor="#808080"
                    android:textSize="@dimen/m28px" />

                <com.xiyoumoblie.lib.common.ui.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m31px"
                    android:text="邓洁玲"
                    android:textColor="#000000"
                    android:textSize="@dimen/m28px" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
